<div class="products">
 <section class="wrapper">
    <form action='/search' method='POST'>
      <input type="text" id="search" placeholder="Search.." name="search"><button id="btn" type="submit"><i class="fa fa-search"></i></button>
    </form>
    <section id="ul">
      <% products.forEach(product => {%>
        <div class="box ">
          <a id="view-product" href="/products/<%= product.id %>"><p><%= product.name %></p></a> 
          <div class="second-row"> <p><%= product.price %>â‚¬</p></div>
            <div class="store third-row"> 
              <button id="<%= product.name %>" class="leaveToBuyList"><i class="fas fa-cart-arrow-down"></i></button>
              <div class="stock">0</div>
              <button id="<%= product.name %>" class="addToBuyList"><i class="fas fa-cart-plus"></i></button>
            </div>
        </div>
      <% }) %>
    </section>
    <div class="buy-container">
      <button id="buy">ORDER</button>
    </div>
  </section>
</div>
<script src="/javascripts/productStore.js"></script>
